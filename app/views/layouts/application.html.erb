  <body>
  <div id="wrapper">
    <!-- Dropdown Structure -->
    <div id="login_div" class="webui-popover-content">
      <form class="login_form" action="/sessions" method="post">
        <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
        <div class="input-field col s12">
          <label for="email">Email</label>
          <input type="email" id="email" name="email">
        </div>
        <div class="input-field col s12">
          <label for="password">Password</label>
          <input type="password" id="password" name="password">
        </div>
        <p class="login_error_p error"></p>
        <button class="btn waves-effect waves-light" type="submit" name="action">Log In</button>
      </form>
    </div>

